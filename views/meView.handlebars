
<div class="grid gap-x-10 md:grid-cols-14 ml-56 p-6 max-h-screen overflow-y-auto">
  {{> _sidePanel activeMe=true}}
      
      
        <!------------CENTER CONTENT------------------------>
      <div class="md:col-span-9 ml-10">
        <div class=" text-gray-500 text-sm italic">
        HRIS / <a href="/me">My Profile / </a>
        <span>Profile Overview</span>
        </div>
        <div id="profileSection" class="relative mt-20 h-20 bg-cover bg-center rounded-lg">
        </div>
        
        <!------------ Cards ------------------------>
      
          <!------------Contract Details Card------------------------>
        <div class="w-full max-w-full xl:w-6/12 mt-5 rounded-lg shadow-lg bg-white">
          <div class="p-6 flex flex-col">
    
            <!-- User Name & Email -->
            <!-- User Role  -->
            <div class="mt-4 w-full flex justify-between gap-20 text-sm">
              <div>
                <h2 class="text-lg font-semibold mt-3 text-secondary-800">{{user.name}}</h2>
                <p class="text-sm ">{{user.email}}</p>
              </div>
              <div class="flex flex-col items-center">
                <h2 class="text-lg font-semibold mt-3 text-secondary-800">{{user.role}}</h2>
                <span class="font-light">Permission Level</span>
              </div>
            </div>

            <!-- Created Date -->
            
            <div class="mt-6 text-sm">
                <span class="font-semibold">Created:</span>
                <span class="font-light">{{formatDateTime user.createdAt}}</span>
              </div>

            <!-- Last Password Change -->
              <div class="mt-2 text-sm ">
                <span class="font-semibold">Last Password Change:</span>
                <span class="font-light">
                  {{#if user.passwordChangedAt}}
                    {{formatDateTime user.passwordChangedAt}}
                  {{else}}
                    <span class="font-light">Never Changed</span>
                  {{/if}}
                </span>
                  </div>
                </div>
              </div>

        <!-- Password Change-->
        <div class="w-full max-w-full xl:w-6/12 mt-8 p-6 rounded-lg shadow-lg bg-white">
          <h2 class="text-lg font-semibold text-secondary-800 mb-4">Change Password</h2>

            <form id="passwordChangeForm">
              <!-- Current Password -->
              <div class="mb-4">
                <label for="passwordCurrent" class="block text-sm font-medium text-gray-700">Current Password</label>
                <input type="password" id="passwordCurrent" name="passwordCurrent"
                      class="mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500 sm:text-sm"
                      required>
              </div>

              <!-- New Password -->
              <div class="mb-4">
                <label for="password" class="block text-sm font-medium text-gray-700">New Password</label>
                <input type="password" id="password" name="password"
                      class="mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500 sm:text-sm"
                      required>
              </div>

              <!-- Confirm New Password -->
              <div class="mb-6">
                <label for="passwordConfirmation" class="block text-sm font-medium text-gray-700">Confirm New Password</label>
                <input type="password" id="passwordConfirmation" name="passwordConfirmation"
                      class="mt-1 block w-full px-3 py-2 border rounded-md shadow-sm focus:ring-secondary-500 focus:border-secondary-500 sm:text-sm"
                      required>
              </div>

              <!-- Submit Button -->
              <div>
                <button type="submit" id="updatePasswordBtn"
                        class="px-4 py-2 bg-secondary-600 text-white font-medium rounded-lg hover:bg-secondary-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary-500">
                  Update Password
                </button>
              </div>
            </form>
          </div>
 
         <!------------ ------------------------>

        </div>
        </div>
       </div> 
      
        <div class="mb-2"></div>
        <!--- Footer Here-->
        
      </div>
    </div>
  </body>
</html> 

