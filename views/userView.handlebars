
<div class="grid gap-x-10 md:grid-cols-14 ml-56 p-6 max-h-screen overflow-y-auto">
  {{> _sidePanel activeUsers=true}}
      
      
        <!------------CENTER CONTENT------------------------>
      <div class="md:col-span-9 ml-10">
        <div class=" text-gray-500 text-sm italic">
        HRIS / <a href="/users">Users / </a>
        <span>User Overview</span>
        </div>
        <div class="relative mt-20 h-20 bg-cover bg-center rounded-lg">
        </div>
        
        <!------------ Cards ------------------------>
      
          <!------------Contract Details Card------------------------>
        <div class="w-full max-w-full xl:w-6/12 mt-5 rounded-lg shadow-lg bg-white">
          <div class="p-6 flex flex-col items-center text-center">
            <!-- User Profile Image -->
            {{!-- <div class="relative w-20 h-20">
              <img
                src="{{user.photo}}" 
                alt="Profile Picture"
                class="w-full h-full object-cover rounded-full border-2 border-gray-300"
                onerror="this.onerror=null;this.src='/default-profile.png';"
              />
            </div> --}}

            <!-- User Name & Email -->
            <h2 class="text-lg font-semibold mt-3 text-secondary-800">{{user.name}}</h2>
            <p class="text-sm ">{{user.email}}</p>

            <!-- User Role & Assigned Consultant -->
            <div class="mt-4 w-full flex justify-center gap-10 text-sm">
              <div class="flex flex-col items-center">
                <span class="font-light">Role</span>
                <span class="font-semibold">{{user.role}}</span>
              </div>
              <div class="flex flex-col items-center">
                <span class="font-light">Assigned Consultant</span>
                {{#if user.consultant_id}}
                  <a href="/consultant/{{user.consultant_id._id}}" class="text-secondary-600 font-semibold hover:underline">
                    {{user.consultant_id.name}}
                  </a>
                {{else}}
                  <span >Not Assigned</span>
                {{/if}}
              </div>
            </div>

            <!-- Created Date -->
            
            <div class="mt-6 text-sm">
                <span class="font-semibold">Created:</span>
                <span class="font-light">{{formatDateTime user.createdAt}}</span>
              </div>

            <!-- Last Password Change -->
              <div class="mt-2 text-sm ">
                <span class="font-semibold">Last Password Change:</span>
                <span class="font-light">
                  {{#if user.passwordChangedAt}}
                    {{formatDateTime user.passwordChangedAt}}
                  {{else}}
                    <span class="font-light">Never Changed</span>
                  {{/if}}
                </span>
                  </div>
                </div>
              </div>
   
 
         <!------------ ------------------------>
          <div class="mt-8 mb-5">
            <a  href="/users/{{user._id}}/edit" >
          <button class="px-4 py-2 bg-secondary-600 text-white font-medium rounded-lg hover:bg-secondary-200  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary-500">
            Edit User
          </button>
          </a>
        </div>
        </div>
        </div>
       </div> 
      
        <div class="mb-2"></div>
        <!--- Footer Here-->
        
      </div>
    </div>
  </body>
</html> 

