
<div class="grid gap-x-10 md:grid-cols-14 ml-56 p-6 max-h-screen overflow-y-auto">
  {{> _sidePanel activeProjects=true}}

      <!---------------CENTER CONTENT--------------------------->
      <div class="md:col-span-9 ml-10">
        <div class=" text-gray-500 text-sm italic">
        HRIS / <a href="/projects">Projects / </a>
        <span>Project Overview</span>
        </div>
      <!------------CARDS row -1 -------------------------------------->
        <div class="flex gap-3 items-center">
      <!------------PROJECT INTRO CARD ------------------------->
          <div class="w-full max-w-full mt-20 mb-2 px-3 xl:w-8/12 text-sm rounded-lg shadow-md bg-white">
          {{!-- PROJECT NAME --}}
            <div class="p-5 mb-2">
                <span class="text-xl text-secondary-200 font-bold">{{project.name}}
                </span>
            </div>    
            
            {{!-- DATES--}}
            <div class="flex pl-5 gap-10 pb-7">
               {{#if project.bmgfProjectFinance}}
              <div class="flex flex-row gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7 text-green-500">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z" />
                  </svg>
                  <div class="flex flex-col">
                    <span class="font-light text-sm text-slate-500">Project Commence Date:</span>
                    <span class="font-semibold text-sm">{{formatDate project.projectStartDate}}</span>
                  </div>
              </div>
              <div class="flex flex-row pl-5 gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7 text-secondary-500">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 2.994v2.25m10.5-2.25v2.25m-14.252 13.5V7.491a2.25 2.25 0 0 1 2.25-2.25h13.5a2.25 2.25 0 0 1 2.25 2.25v11.251m-18 0a2.25 2.25 0 0 0 2.25 2.25h13.5a2.25 2.25 0 0 0 2.25-2.25m-18 0v-7.5a2.25 2.25 0 0 1 2.25-2.25h13.5a2.25 2.25 0 0 1 2.25 2.25v7.5m-6.75-6h2.25m-9 2.25h4.5m.002-2.25h.005v.006H12v-.006Zm-.001 4.5h.006v.006h-.006v-.005Zm-2.25.001h.005v.006H9.75v-.006Zm-2.25 0h.005v.005h-.006v-.005Zm6.75-2.247h.005v.005h-.005v-.005Zm0 2.247h.006v.006h-.006v-.006Zm2.25-2.248h.006V15H16.5v-.005Z" />
                  </svg>
                  <div class="flex flex-col">
                    <span class="font-light text-sm text-slate-500">Project End Date:</span>
                    <span class="font-semibold text-sm">{{formatDate project.projectDueDate}}</span>
                  </div>
              </div>
               {{/if}}
              <div class="flex flex-row pl-5 gap-2">
                 {{#if (eq project.projectStatus "Inactive")}}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7 text-secondary-500">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                  <div class="flex flex-col">
                    <span class="font-light text-sm text-slate-500">Project Status:</span>
                    <span class="text-red-500 font-semibold text-sm">{{project.projectStatus}}</span>
                  </div>  
                 {{else}}
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7 text-secondary-600">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                  </svg>
                  <div class="flex flex-col">
                    <span class="font-light text-sm text-slate-500">Project Status:</span>
                    <span class="text-secondary-200 font-semibold text-sm">{{project.projectStatus}}</span>
                  </div>
                 {{/if}}
              </div>
            </div> 
            {{!-- DESCRIPTION--}} 
            <div class="flex flex-col pb-5 pl-5">
                <span class="pb-2 font-semibold">Description:</span>
                <span class="font-light">{{project.description}}</span>
            </div> 
            {{!-- OTHER--}}
            <div class="text-sm flex flex-col pb-6 space-y-2 pl-5">
              <div>
                <span class="font-semibold">Project Client Name:</span>
                <span class="font-light">{{project.projectClientName}}</span>
              </div>
              {{!-- <div>
                <span class="font-semibold">Programme Geography:</span>
                <span class="font-light">{{project.programmeGeography}}</span>
              </div> --}}
              <div class="flex items-center gap-2">
                <span class="font-semibold">Project Leader:</span>
               <a href="/consultant/{{project.projectLeader._id}}"> <span class="font-light">{{project.projectLeader.name}}</span></a>
              </div>
              {{!-- {{/if}} --}}
            </div>
          </div> <!------------END OF PROJECT INTRO CARD ------------------------->
          <!------------ FEES CARD  ------------------------->
          <div class="w-full max-w-full mt-20 mb-2 px-3 xl:w-4/12">   
            {{!-- FEED--}}
            {{#if project.bmgfProjectFinance}}
              <div class="flex items-center justify-items-center p-4  mb-2 flex-row gap-2 text-slate-100 bg-secondary-200 rounded-lg shadow-md">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-7 text-green-500">
